<?xml version="1.0" encoding="UTF-8" ?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<GridPane
    alignment="CENTER"
    hgap="10.0"
    vgap="10.0"
    xmlns:fx="http://javafx.com/fxml/1"
    xmlns="http://javafx.com/javafx/17.0.2-ea"
    fx:controller="com.example.morse.MorseController"
>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" percentWidth="33.0" />
        <ColumnConstraints
            hgrow="SOMETIMES"
            minWidth="10.0"
            percentWidth="33.0"
        />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints
            minHeight="10.0"
            percentHeight="70.0"
            vgrow="SOMETIMES"
        />
        <RowConstraints
            minHeight="10.0"
            percentHeight="30.0"
            vgrow="SOMETIMES"
        />
    </rowConstraints>

    <!-- Tree Viewer -->
    <Pane
        fx:id="treeViewerPane"
        style="-fx-border-color: grey;"
        GridPane.columnIndex="0"
        GridPane.rowIndex="0"
        GridPane.columnSpan="3"
    >
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </Pane>

    <!-- Morse Pad -->
    <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
    <Label text="Morse pad:" />
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Button
                fx:id="morsePad"
                minHeight="100.0"
                minWidth="100.0"
                mnemonicParsing="false"
                onMousePressed="#handlePadPress"
                onMouseReleased="#handlePadRelease"
            />
            <VBox spacing="10">
                <Button
                    fx:id="mousePadEnterButton"
                    mnemonicParsing="false"
                    onAction="#handleMousePadEnter"
                    text="Enter"
                    maxWidth="Infinity"
                    prefHeight="45.0"
                    minWidth="50.0"
                />
                <Button
                    fx:id="mousePadClearButton"
                    mnemonicParsing="false"
                    onAction="#handleMousePadClear"
                    text="Clear"
                    maxWidth="Infinity"
                    prefHeight="45.0"
                    minWidth="50.0"
                />
            </VBox>
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <TextField
                    fx:id="morsePadCodeOutput"
                    editable="false"
                    mouseTransparent="true"
                    prefHeight="45.0"
                    style="-fx-font-size: 16;"
                    HBox.hgrow="ALWAYS"
                />
                <TextField
                    fx:id="morsePadTextOutput"
                    editable="false"
                    mouseTransparent="true"
                    prefHeight="45.0"
                    style="-fx-font-size: 16;"
                    HBox.hgrow="ALWAYS"
                />
            </VBox>
        </HBox>
    </VBox>

    <!-- Converter -->
    <VBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <Label text="Input:" />
        <TextArea fx:id="inputText" prefHeight="50.0" wrapText="true" />
        <HBox spacing="10">
            <Button
                fx:id="toMorseButton"
                mnemonicParsing="false"
                onAction="#handleToMorse"
                text="To Morse"
            />
            <Button
                fx:id="toTextButton"
                mnemonicParsing="false"
                onAction="#handleToText"
                text="To Text"
            />
            <Button
                fx:id="clearButton"
                mnemonicParsing="false"
                onAction="#handleClear"
                text="Clear"
            />
        </HBox>
        <Label text="Output:" />
        <TextArea
            fx:id="resultText"
            prefHeight="50.0"
            wrapText="true"
            editable="false"
            mouseTransparent="true"
        />
    </VBox>

    <!-- Tree handler -->
    <VBox spacing="10.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
        <Label text="Morse:" />
        <TextArea fx:id="addMorseInput" prefHeight="50.0" wrapText="true" />
        <Label text="Letter:" />
        <TextArea fx:id="addTextInput" prefHeight="50.0" wrapText="true" />
        <HBox spacing="10">
            <Button
                fx:id="addMorseSubmitButton"
                mnemonicParsing="false"
                text="Add"
            />
            <Button
                fx:id="addMorseClearButton"
                mnemonicParsing="false"
                text="Clear"
            />
        </HBox>
    </VBox>
</GridPane>
